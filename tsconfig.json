{
    "compilerOptions": {
        "moduleResolution": "Node",
        "target": "es2019",
        "lib": [
            "es2020"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "removeComments": true,
        "noImplicitAny": false,
        "strictFunctionTypes": false,
        "strict": false,
        "strictNullChecks": false,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "noEmitOnError": false,
        "allowJs": true
    },
    "exclude": [
        "debug",
        "sandbox",
        "node_modules",
        ".build",
        "babel-dist",
        "dist",
        "build",
        "tmp",
        ".next",
        "out",
        "**/*.test.ts"
    ]
}